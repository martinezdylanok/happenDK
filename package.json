{
	"name": "happendk",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"workspaces": [
		"apps/web",
		"apps/api"
	],
	"scripts": {
		"web:dev": "npm run dev --workspace apps/web",
		"web:build": "npm run build --workspace apps/web",
		"web:lint": "npm run lint --workspace apps/web",
		"api:dev": "cd apps/api && source env/bin/activate && FLASK_DEBUG=1 PYTHONPATH=. python3 src/app/app.py",
		"api:start": "cd apps/api && source env/bin/activate && PYTHONPATH=. python3 src/app/app.py",
		"api:lint": "cd apps/api && source env/bin/activate && black --check ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"vite": "npm:rolldown-vite@7.2.2"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@7.2.2"
	}
}
